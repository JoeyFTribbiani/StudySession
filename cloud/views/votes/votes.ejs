<%include ../template/header.ejs%>
    <div class="jumbotron">
        <p class="lead">Please type in your name and select the time of study session that you prefer.</p>
        <form action="addVote" method="POST">
            <div class="row">
                <div class="col-lg-6">
                    <div class="input-group input-group-sm">
                        <span class="input-group-addon" id="basic-addon2">Name<span style="color:#cc0000;">(*)</span></span>
                        <input type="text" name="name" class="form-control" placeholder="Your Full Name" id="name" aria-describedby="basic-addon2">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" name="email" placeholder="Your GWMail" aria-describedby="basic-addon2">
                        <span class="input-group-addon" id="basic-addon2">@gwu.edu</span><span>(optional)</span>
                    </div>
                </div>
            </div>
            Please select <span style="color:#cc0000;">(*)</span>
            <div class="card-block">
                <%options.forEach (function (option){%>
                <div class="input-group">
                    <label class="checkbox">
                        <input type="checkbox" name="option" value="<%=option.id%>"/><%=option.get("content")%>
                    </label>
                </div>
                <%})%>
            </div>
            <input type="submit" class="btn" value="Submit"/>
        </form>
    </div>
<%include ../template/footer.ejs%>