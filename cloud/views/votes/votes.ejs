<%include ../template/header.ejs%>
    <div class="jumbotron">
        <p class="lead">Please type in your name and select the time of study session that you prefer.</p>
        <div class="row">
            <div class="col-lg-6">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon" id="basic-addon2">Name</span>
                    <input type="text" class="form-control" id="name" aria-describedby="basic-addon2">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control" placeholder="Recipient's username" aria-describedby="basic-addon2">
                    <span class="input-group-addon" id="basic-addon2">@example.com</span>
                </div>
            </div>
        </div>
        <div class="card-block">
            <%options.forEach (function (option){%>
            <div class="input-group">
                <label class="checkbox">
                    <input type="checkbox"/><%=option.get("content")%>
                </label>
            </div>
            <%})%>
        </div>
        <input type="submit" class="btn" value="Submit"/>
    </div>
<%include ../template/footer.ejs%>